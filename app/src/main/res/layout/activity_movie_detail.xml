<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.movies.detail.MovieDetailActivity">
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
		
		<android.support.v7.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:background="@color/colorGray800">
			
			<android.support.v7.widget.AppCompatImageView
					android:id="@+id/movieDetailPosterImageView"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:scaleType="centerCrop"
					android:src="@drawable/ic_movies"/>
			
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical">
				
				<android.support.v7.widget.AppCompatTextView
						android:id="@+id/movieDetailTitleText"
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Fight Club"
						android:textSize="20sp"
						android:textColor="@color/colorWhite"
						android:layout_margin="@dimen/activity_vertical_margin"/>
				
				<ImageView
						android:id="@+id/movieLikeOverImage"
						android:src="@drawable/ic_star"
						android:layout_width="26dp"
						android:layout_height="26dp"
						android:tint="@color/colorWhite"
						android:visibility="gone"
						android:layout_marginHorizontal="@dimen/activity_vertical_margin"/>
				
				<ImageView
						android:id="@+id/movieLikeImage"
						android:src="@drawable/ic_star_border"
						android:layout_width="26dp"
						android:layout_height="26dp"
						android:tint="@color/colorWhite"
						android:layout_marginHorizontal="@dimen/activity_vertical_margin"/>
			
			</LinearLayout>
			
			<android.support.v7.widget.LinearLayoutCompat
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingStart="@dimen/activity_vertical_margin"
					android:paddingEnd="@dimen/activity_vertical_margin"
					android:orientation="horizontal">
				
				<android.support.v7.widget.AppCompatTextView
						android:id="@+id/movieDetailAverageTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="98% relevante"
						android:textStyle="bold"
						android:textSize="18dp"
						android:textColor="@android:color/holo_green_dark"/>
				
				<android.support.v7.widget.AppCompatTextView
						android:id="@+id/movieDetailYearTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/nav_header_vertical_spacing"
						android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
						android:text="2018"/>
			
			</android.support.v7.widget.LinearLayoutCompat>
			
			<android.support.v7.widget.AppCompatTextView
					android:id="@+id/movieDetailOverviewTextView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/activity_vertical_margin"
					android:text="A ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy. Their concept catches on, with underground fight clubs forming in every town, until an eccentric gets in the way and ignites an out-of-control spiral toward oblivion."/>
		
		</android.support.v7.widget.LinearLayoutCompat>
	
	</ScrollView>

</android.support.constraint.ConstraintLayout>